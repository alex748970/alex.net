    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('contactForm');
            const submitBtn = document.getElementById('submitBtn');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const successMessage = document.getElementById('successMessage');
            
            // Your contact number
            const YOUR_CONTACT_NUMBER = '7489709954';
            const COUNTRY_CODE = '91'; // India
            
            // Form validation
            function validateField(field, errorElement, validationFn) {
                const value = field.value.trim();
                const isValid = validationFn(value);
                
                if (!isValid) {
                    field.classList.add('error');
                    errorElement.style.display = 'block';
                    return false;
                } else {
                    field.classList.remove('error');
                    errorElement.style.display = 'none';
                    return true;
                }
            }
            
            function validateName(name) {
                return name.length >= 2;
            }
            
            function validateContact(contact) {
                return /^[\+]?[1-9][\d]{0,15}$/.test(contact.replace(/\D/g, ''));
            }
            
            function validateEmail(email) {
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            }
            
            function validateMessage(message) {
                return message.length >= 10;
            }
            
            // Real-time validation
            document.getElementById('name').addEventListener('input', function() {
                validateField(this, document.getElementById('nameError'), validateName);
            });
            
            document.getElementById('contact').addEventListener('input', function() {
                validateField(this, document.getElementById('contactError'), validateContact);
            });
            
            document.getElementById('email').addEventListener('input', function() {
                validateField(this, document.getElementById('emailError'), validateEmail);
            });
            
            document.getElementById('message').addEventListener('input', function() {
                validateField(this, document.getElementById('messageError'), validateMessage);
            });
            
            // Format WhatsApp message
            function formatWhatsAppMessage(formData) {
                return `*New Contact Form Message*

*Name:* ${formData.name}
*Contact:* ${formData.contact}
*Company:* ${formData.company || 'Not provided'}
*Email:* ${formData.email}

*Message:*
${formData.message}

*Timestamp:* ${new Date().toLocaleString('en-IN', {
                    timeZone: 'Asia/Kolkata',
                    dateStyle: 'full',
                    timeStyle: 'medium'
                })}`;
            }
            
            // Form submission
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                // Validate all fields
                const isNameValid = validateField(
                    document.getElementById('name'),
                    document.getElementById('nameError'),
                    validateName
                );
                
                const isContactValid = validateField(
                    document.getElementById('contact'),
                    document.getElementById('contactError'),
                    validateContact
                );
                
                const isEmailValid = validateField(
                    document.getElementById('email'),
                    document.getElementById('emailError'),
                    validateEmail
                );
                
                const isMessageValid = validateField(
                    document.getElementById('message'),
                    document.getElementById('messageError'),
                    validateMessage
                );
                
                if (!isNameValid || !isContactValid || !isEmailValid || !isMessageValid) {
                    return;
                }
                
                // Show loading state
                submitBtn.disabled = true;
                loadingSpinner.style.display = 'block';
                submitBtn.querySelector('span').textContent = 'Preparing...';
                
                // Get form data
                const formData = {
                    name: document.getElementById('name').value.trim(),
                    contact: document.getElementById('contact').value.trim(),
                    company: document.getElementById('company').value.trim(),
                    email: document.getElementById('email').value.trim(),
                    message: document.getElementById('message').value.trim()
                };
                
                // Format WhatsApp message
                const whatsappMessage = formatWhatsAppMessage(formData);
                
                // Encode message for URL
                const encodedMessage = encodeURIComponent(whatsappMessage);
                
                // Create WhatsApp URL
                const whatsappURL = `https://wa.me/${COUNTRY_CODE}${YOUR_CONTACT_NUMBER}?text=${encodedMessage}`;
                
                // Show success message briefly
                successMessage.style.display = 'block';
                
                // Wait a moment for user to see the success message
                setTimeout(() => {
                    // Open WhatsApp in new tab
                    window.open(whatsappURL, '_blank');
                    
                    // Reset form
                    form.reset();
                    
                    // Hide success message
                    successMessage.style.display = 'none';
                    
                    // Reset button state
                    submitBtn.disabled = false;
                    loadingSpinner.style.display = 'none';
                    submitBtn.querySelector('span').textContent = 'Send via WhatsApp';
                }, 1500);
            });
            
            // Format phone number input
            document.getElementById('contact').addEventListener('input', function(e) {
                let input = e.target.value.replace(/\D/g, '').substring(0, 15);
                
                if (input.length > 0) {
                    input = input.match(new RegExp('.{1,4}', 'g')).join(' ');
                }
                
                e.target.value = input;
            });
            
            // Add click-to-call functionality
            const phoneLink = document.querySelector('.contact-phone');
            phoneLink.addEventListener('click', function(e) {
                e.preventDefault();
                if (confirm('Would you like to call this number?')) {
                    window.location.href = 'tel:' + YOUR_CONTACT_NUMBER;
                }
            });
        });
    </script>
</body>
</html>

```
